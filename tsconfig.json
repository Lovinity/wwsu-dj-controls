{
	"compilerOptions": {
		"module": "commonjs",
		"noImplicitAny": true,
		"noImplicitThis": true,
		"allowJs": true,
		"sourceMap": true,
		"strictNullChecks": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*"]
		},
		"resolveJsonModule": true
	},
	"include": ["src/**/*"]
}
