{
	"name": "wwsu-dj-controls",
	"productName": "wwsu-dj-controls",
	"version": "8.0.0-alpha.5",
	"description": "Front-end application for the WWSU API / radio system, used by the DJs and staff of WWSU.",
	"license": "MIT",
	"repository": "https://github.com/Lovinity/wwsu-dj-controls",
	"author": {
		"name": "Patrick Schmalstig",
		"email": "xanaftp@gmail.com",
		"url": "https://wwsu1069.org"
	},
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"lint": "xo",
		"test": "npm run lint",
		"start": "electron .",
		"pack": "electron-builder --dir",
		"dist": "electron-builder --macos --linux --windows",
		"release": "np"
	},
	"dependencies": {
		"electron-context-menu": "^0.15.0",
		"electron-debug": "^3.0.0",
		"electron-store": "^5.1.0",
		"electron-unhandled": "^3.0.0",
		"electron-updater": "^4.0.6",
		"electron-util": "^0.13.0",
		"node-machine-id": "^1.1.12",
		"serialport": "^9.0.1"
	},
	"devDependencies": {
		"electron": "^7.1.1",
		"electron-builder": "^21.2.0",
		"np": "^5.0.3",
		"xo": "^0.33.1"
	},
	"xo": {
		"envs": [
			"node",
			"browser"
		]
	},
	"np": {
		"publish": false,
		"releaseDraft": false
	},
	"build": {
		"appId": "com.Lovinity.wwsu-dj-controls",
		"productName": "WWSU DJ Controls",
		"copyright": "Copyright Â© 2018-2020 WWSU 106.9 FM",
		"mac": {
			"category": "public.app-category.business",
			"darkModeSupport": false
		},
		"dmg": {
			"iconSize": 160,
			"contents": [
				{
					"x": 180,
					"y": 170
				},
				{
					"x": 480,
					"y": 170,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"linux": {
			"target": [
				"AppImage",
				"deb"
			],
			"category": "Utility"
		}
	}
}
