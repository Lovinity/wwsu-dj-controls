{
	"name": "wwsu-dj-controls",
	"productName": "wwsu-dj-controls",
	"version": "8.17.0-alpha",
	"appId": "com.Lovinity.wwsu-dj-controls",
	"description": "Front-end application for the WWSU API / radio system, used by the DJs and staff of WWSU.",
	"license": "MIT",
	"repository": "https://github.com/Lovinity/wwsu-dj-controls",
	"author": {
		"name": "Patrick Schmalstig",
		"email": "xanaftp@gmail.com",
		"url": "https://wwsu1069.org"
	},
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"lint": "xo",
		"start": "electron .",
		"pack": "electron-builder --dir",
		"dist": "electron-builder",
		"release": "electron-builder --macos --linux --windows -p always"
	},
	"dependencies": {
		"electron-context-menu": "^2.5.0",
		"electron-debug": "^3.2.0",
		"electron-store": "^7.0.2",
		"electron-unhandled": "^3.0.2",
		"electron-updater": "^4.3.8",
		"electron-util": "^0.14.2",
		"node-abi": "^2.21.0",
		"sanitize-filename": "^1.6.3",
		"semver": "^7.3.5"
	},
	"devDependencies": {
		"@doyensec/electronegativity": "^1.9.0",
		"cross-env": "^7.0.3",
		"electron": "^12.0.4",
		"electron-builder": "^22.10.5"
	},
	"xo": {
		"envs": [
			"node",
			"browser"
		],
		"prettier": true
	},
	"np": {
		"publish": false,
		"releaseDraft": true
	},
	"build": {
		"appId": "com.Lovinity.wwsu-dj-controls",
		"productName": "WWSU DJ Controls",
		"copyright": "Copyright Â© 2018-2020 WWSU 106.9 FM",
		"mac": {
			"category": "public.app-category.business",
			"darkModeSupport": false,
			"target": [
				"pkg"
			]
		},
		"linux": {
			"target": [
				"deb",
				"rpm"
			],
			"category": "Utility"
		},
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true
		}
	}
}
